X_INCDIRS	+= WebDAV/cgi
X_LIBS		+= libxlibc.a libnetc.a
X_CFLAGS	+= -D__NXOS__

NAME		:= showdir.xapp
SRC			+= showdir.c cgic.c

define CUSTOM_TARGET_CMD
echo [APP] $@; \
$(LD) $(X_LDFLAGS) $(X_OBJS) -o $@ $(patsubst %, -L%, $(X_LIBDIRS)) \
	--start-group $(patsubst %, -l:%, $(X_LIBS)) --end-group
endef
